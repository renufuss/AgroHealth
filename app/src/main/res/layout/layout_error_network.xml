<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/imageView_layoutNeedLogin_topLogo"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        app:layout_constraintHorizontal_bias="0.45"
        android:src="@drawable/logo_with_text_landscape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_layoutErrorNetwork"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/error_network"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_layoutNeedLogin_topLogo"
        app:layout_constraintVertical_bias="0.326" />

    <TextView
        android:id="@+id/textView_layoutErrorNetwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="A network problem occurred"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_layoutErrorNetwork" />

    <Button
        android:id="@+id/button_layoutErrorNetwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/green"
        android:text="@string/try_again"
        android:layout_marginBottom="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_layoutErrorNetwork" />

</androidx.constraintlayout.widget.ConstraintLayout>