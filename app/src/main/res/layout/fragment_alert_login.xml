<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.auth.alertLogin.AlertLoginFragment">

    <ImageView
        android:id="@+id/imageView_alertLogin"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/broccoli_sad"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_alertLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unfortunately_you_can_t_access_this_feature_yet_because_you_haven_t_logged_in"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_alertLogin" />

    <Button
        android:id="@+id/button_alertLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/green"
        android:text="@string/login"
        android:layout_marginBottom="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_alertLogin" />

</androidx.constraintlayout.widget.ConstraintLayout>